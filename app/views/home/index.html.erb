<%= flash[:error] %>
<% if owner_signed_in? %>
  <p>Bem-vindo, <%= current_owner.first_name %></p>
<% end %>

<div class="row">
  <% if @properties.empty? %>
    <div class="alert alert-danger" role="alert">
      Nenhum imÃ³vel cadastrado
    </div>
  <% else %>
    <% @properties.each do |property| %>
    <div class="col-4">
      <%= render partial: '/shared/property_thumbnail', locals: {property: property}%>
    </div>
    <% end %>
  <% end %>
</div>

<% if @location_purposes.any? %>
  <ul>
    <% @location_purposes.each do |location_purpose| %>
      <li><%= link_to location_purpose.title, properties_by_purpose_path(location_purpose) %></li>
    <% end %>
  </ul>
<% end %>
