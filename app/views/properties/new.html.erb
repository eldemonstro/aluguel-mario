<h1>Cadastre um Imóvel</h1>
<% if @property.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% @property.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class="col-md-6">
    <h4>Cadastrar um imóvel</h4>
    <hr>
    <%= form_for @property, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :property_type_id, 'Tipo do Imóvel'  %>
        <%= f.collection_select(:property_type_id, @property_types,
                                :id, :name, {},class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.label :location , 'Localização'%>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :area , 'Área'%>
        <%= f.text_field :area, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description , 'Descrição'%>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location_purpose_ids, 'Propósito da locação'  %>
        <%= f.collection_select(:location_purpose_ids, @location_purposes,
                                :id, :title, {},class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.label :daily_rate , 'Valor da Diária'%>
        <%= f.text_field :daily_rate, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rooms , 'Quantidade de Quartos'%>
        <%= f.text_field :rooms, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :minimum_rent_days , 'Mínimo de Diárias'%>
        <%= f.text_field :minimum_rent_days, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :maximum_rent_days , 'Máximo de Diárias'%>
        <%= f.text_field :maximum_rent_days, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :maximum_occupancy , 'Ocupação Máxima'%>
        <%= f.text_field :maximum_occupancy, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :usage_rules , 'Regras de Uso'%>
        <%= f.text_field :usage_rules, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :photo , 'Foto'%>
        <%= f.file_field :photo %>
      </div>

      <%= f.submit 'Cadastrar', class: "btn btn-primary" %>
    <% end %>
  </div
</div>
